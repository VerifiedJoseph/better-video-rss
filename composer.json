{
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "phpcsstandards/php_codesniffer": "^3.8",
        "phpunit/phpunit": "^10.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "include/"
        }
    },
    "scripts": {
        "lint": "phpstan && phpcs",
        "lint-phpstan": "phpstan",
        "lint-phpcs": "phpcs",
        "lint-phpcs-gh-action": "phpcs --report=checkstyle | cs2pr",
        "fix": "phpcbf",
        "test": "phpunit --colors"
    }
}
